<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent"
    tools:context="com.example.qenawi.movieappnanno_phase1.Fragments.Detail_activity_fragment"
    android:orientation="vertical"
    android:weightSum="2">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:weightSum="2"
        android:layout_weight="2">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/abc"
            android:id="@+id/imageView"
            android:layout_weight="0.90" />
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ReleaseDatae"
                android:textSize="17sp"
                android:padding="5dp"
                android:lines="1"
                />
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28/9/2010"
                android:textSize="20sp"
                android:id="@+id/release_date"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vote Average"
                android:textSize="17sp"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10/10"
                android:textSize="20sp"
                android:id="@+id/vote_average"
                android:layout_gravity="center"
                />
        </LinearLayout><!--date and vote avg   -->
    </LinearLayout><!-- img and  date and vote avg   -->
<TextView
    android:paddingTop="10dp"
    android:paddingBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Ful name"
    android:id="@+id/FullMoviename"
    android:textSize="20sp"
    />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="this si the REview"
            android:id="@+id/movieReview_text"
            />
    </ScrollView>
</LinearLayout>
